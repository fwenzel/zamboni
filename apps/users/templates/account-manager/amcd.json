{
    "methods": {
        "username-password-form": {
            "connect": {
                "method":"POST",
                "path":"/en-US/firefox/users/login",
                "params": {
                    "username":"username",
                    "password":"password",
                    "token":"csrfmiddlewaretoken"
                }
            },
            "disconnect": {
                "method":"GET",
                "path":"/en-US/firefox/users/logout"
            },
            "changepassword": {
                "method":"POST",
                "path":"/en-US/firefox/users/edit",
                "params": {
                    "username":"email",
                    "old_password":"oldpassword",
                    "password":"password",
                    "password_verify":"password2"
                }
            },
            "sessionstatus": {
                "method":"GET",
                "path":"/account-manager/sessionstatus"
            },
        }
    }
}
